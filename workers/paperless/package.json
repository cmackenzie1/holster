{
	"name": "paperless",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "vite build",
		"build:verify": "pnpm run build && wrangler deploy --dry-run",
		"serve": "vite preview",
		"test": "vitest run",
		"deploy": "pnpm run build && VERSION_ID=$(wrangler versions upload --tag $(git rev-parse --short HEAD) --message \"$(git log -1 --pretty=%s)\" 2>&1 | grep 'Worker Version ID:' | awk '{print $4}') && wrangler versions deploy $VERSION_ID@100 --yes",
		"preview": "pnpm run build && vite preview",
		"cf-typegen": "wrangler types",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio"
	},
	"dependencies": {
		"@cloudflare/containers": "^0.1.0",
		"@cloudflare/vite-plugin": "^1.23.1",
		"@tailwindcss/vite": "^4.0.6",
		"@tanstack/react-devtools": "^0.9.5",
		"@tanstack/react-router": "^1.159.4",
		"@tanstack/react-router-devtools": "^1.159.4",
		"@tanstack/react-router-ssr-query": "^1.159.4",
		"@tanstack/react-start": "^1.159.4",
		"@tanstack/react-table": "^8.21.3",
		"@tanstack/router-plugin": "^1.159.4",
		"drizzle-orm": "^0.45.1",
		"lucide-react": "^0.563.0",
		"pdfjs-dist": "^5.4.624",
		"postal-mime": "^2.7.3",
		"postgres": "^3.4.5",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"tailwindcss": "^4.0.6",
		"vite-tsconfig-paths": "^6.1.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@tanstack/devtools-vite": "^0.5.1",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/react": "^16.2.0",
		"@types/node": "^25.2.1",
		"@types/react": "^19.2.13",
		"@types/react-dom": "^19.2.0",
		"@vitejs/plugin-react": "^5.0.4",
		"dotenv": "^17.2.4",
		"drizzle-kit": "^0.31.0",
		"jsdom": "^28.0.0",
		"typescript": "^5.9.3",
		"vite": "^7.1.7",
		"vitest": "~4.0.18",
		"web-vitals": "^5.1.0",
		"wrangler": "^4.63.0"
	}
}
